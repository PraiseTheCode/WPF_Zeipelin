<Window x:Class="WPF_Zeipelin.WindowModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Zeipelin"
        mc:Ignorable="d"
        Title="WindowModel" Height="300" Width="300">
    <Grid>
        <Viewport3D x:Name="mainViewport2" ClipToBounds="True" RenderTransformOrigin="0.50,0.50" Margin="10">
            <Viewport3D.Camera>
                <PerspectiveCamera
                    FarPlaneDistance="100"
                    LookDirection="-2,0,0"
                    UpDirection="0,0,1"
                    NearPlaneDistance="1"
                    Position="2,0,0"
                    FieldOfView="70"/>
            </Viewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <AmbientLight
                        Color="White"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>

    </Grid>
</Window>
